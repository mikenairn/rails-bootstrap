<legend>Sign in <span style="float:right"><p><%= link_to "Sign up", new_registration_path(resource_name) %></p></span>
</legend>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="inputs">
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false, :hint => (link_to "Forgot your password?", new_password_path(User)), :preview => "Preview", :error => "Error" %>
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in", :class => 'btn-large btn-largest' %>
    </div>
<% end %>
